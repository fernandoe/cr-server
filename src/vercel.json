{
  "builds": [
    {
      "src": "server/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server/wsgi.py"
    }
  ],
  "crons": [
    {
      "path": "/manage.py import_data",
      "schedule": "45 1 * * *"
    }
  ]
}
